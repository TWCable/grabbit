<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="clientWorkflowOnTasklet" class="com.twc.grabbit.client.batch.steps.workflows.WorkflowOnTasklet" scope="step">
        <property name="workflowManager" ref="workflowManager"/>
        <property name="workflowConfigs" value="#{jobParameters[workflowConfigIds]}"/>
    </bean>

</beans>
